  body
    .fullscreen
      a(name='home' id='home')
      
      header
        a.logo(href='/') AR
        
        .popup-nav
          a.trigger
            span
     
          nav
            ul
              each item in menu
                li
                  a(href='#{item.href}' data-scroll) #{item.title}
              li
                a(target='_blank' href='https://docs.google.com/document/d/1ZiIRBZs7Ow-1bwSG_SNl9V2zBkJwm0sWxThGgbnWM98/edit?usp=sharing') Résumé

        nav
          ul
            each item in menu
              li
                a(href='#{item.href}' data-scroll) #{item.title}
            li
              a(target='_blank' href='https://docs.google.com/document/d/1ZiIRBZs7Ow-1bwSG_SNl9V2zBkJwm0sWxThGgbnWM98/edit?usp=sharing') Résumé

      .hero
        h2 WELCOME TO MY WEBSITE
        h1 ALEXANDRU ROȘIANU
        h2 WEB DEVELOPER

      .scroll
        p
          a(href='#about' data-scroll) FIND OUT MORE
        a(href='#about' data-scroll)
          include svg/arrows.svg

    .below-fullscreen
      a(name='about' id='about')
      
      section
        h3
          span About Me
        
        ul.paragraphs
          each item in about
            li
              p
                span #{item.title}
                span !{item.description}

      img.me(alt='Alexandru Roșianu')
        
      a(name='skills' id='skills')
        
      section
        h3
          span Skills
        
        ul.skills
          each skill in skills
            li
              p
                span #{skill.title}
                span !{skill.description}
                
      a(name='portfolio' id='portfolio')
                
      section.inverted
        h3
          span Portfolio
        
        each row in portfolio
          .row
            each item, i in row
              .item
                a(href='#{item.url}')
                  img(src='img/portfolio-#{item.id}.jpg' width='400' height='250' alt='#{item.title}')
                
                footer
                  span
                    a(href='#{item.url}') #{item.title}
                  //- span.btn READ MORE
              
        p.more-portfolio See more code on #[a(href='https://github.com/Aluxian') GitHub] and some designs on #[a(href='https://www.behance.net/aluxian') Bēhance].
              
      a(name='achievements' id='achievements')
      
      section
        h3
          span Achievements
          
        ul.achievements
          each achievement in achievements
            li
              p #{achievement.date}
              p !{achievement.description}
              
      a(name='blog' id='blog')
                
      section.inverted
        h3
          span Recent Blog Posts
          
        ul.posts
          each post in posts
            li
              p #{post.meta} on #{post.tags.join(', ')}
              p
                 a(href='#{post.url}') #{post.title}
            
      a(name='contact' id='contact')
              
      footer
        p.codementor
          a(target='_blank' href='//www.codementor.io/aluxian')
            include svg/codementor.svg
        hr
        p Proudly hosted on #[a(href='https://github.com/Aluxian/aluxian.com') GitHub].#[br]Designed and coded with &hearts; by myself.
        hr
        ul
          li
            a(href='https://plus.google.com/+AlexandruRosianu' title='Google+')
              include svg/gplus.svg
          li
            a(href='https://www.facebook.com/aluxian' title='Facebook')
              include svg/facebook.svg
          li
            a(href='https://twitter.com/Aluxian' title='Twitter')
              include svg/twitter.svg
          li
            a(href='https://github.com/Aluxian' title='GitHub')
              include svg/github.svg  
          li
            a(href='https://www.linkedin.com/in/AlexandruRosianu' title='LinkedIn')
              include svg/linkedin.svg
          li
            a(href='mailto:me@aluxian.com' title='Email')
              include svg/email.svg
              
