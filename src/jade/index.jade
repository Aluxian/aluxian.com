doctype html
html
  head
    title Alexandru Rosianu

    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    link(rel='stylesheet', href='css/styles.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400|Oswald:400,300')

  body
    .fullscreen
      a(name='home')
      
      header
        a.logo(href='/') AR
        
        .popup-nav
          a.trigger(href='#0')
            span
     
          nav
            ul
              each item in menu
                li
                  a(href='#{item.href}') #{item.title}

        nav
          ul
            each item in menu
              li
                a(href='#{item.href}') #{item.title}

      .hero
        h2 WELCOME TO MY WEBSITE
        h1 ALEXANDRU ROSIANU
        h2 WEB DEVELOPER

      .scroll
        p
          a(href='#') FIND OUT MORE
        a(href='#')
          include ../svg/arrows.svg

    .below-fullscreen
      a(name='about')
      
