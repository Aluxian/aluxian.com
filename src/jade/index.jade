      section.inverted
        h3
          span Portfolio
        
        .row
          .item
            a(href='#')
              img(src='../img/portfolio-1.jpg')
            
            footer
              span
                a(href='#') CNRV.ro
              //- span.btn READ MORE
            
          .item
            a(href='#')
              img(src='../img/portfolio-2.jpg')
            
            footer
              span
                a(href='#') Aluxian.com
              //- span.btn READ MORE
              
      a(name='achievements')
      
      section
        h3
          span Achievements
          
        ul.posts
          each item in events
            li
              p #{item.meta}
              p: a(href="#{item.link}") #{item.title}
              
      a(name='blog')
                
      section.inverted
        h3
          span Recent Blog Posts
          
        ul.posts
          each post in posts
            li
              p #{post.meta}
              p: a(href="#{post.link}") #{post.title}
              
      footer
        p Proudly hosted on Github.#[br]Designed and created by myself.
        hr
        ul
          li
